{
  "name": "jsonpathx",
  "private": true,
  "description": "Modern, high-performance JSONPath library with RFC 9535 compliance and jsonpath-plus compatibility.",
  "workspaces": [
    "apps/*",
    "packages/*",
    "bench"
  ],
  "scripts": {
    "build": "npm -w packages/jsonpathx run build",
    "test": "npm -ws test",
    "bench": "npm -w bench run bench",
    "docs:dev": "npm -w apps/docs run dev",
    "docs:preview": "npm -w apps/docs run preview",
    "docs:build": "npm run bench && npm -w apps/docs run build"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jsonpathx/jsonpathx.git"
  },
  "keywords": [
    "jsonpath",
    "json",
    "query",
    "typescript",
    "rfc9535",
    "jsonpath-plus",
    "json-query",
    "json-selector",
    "json-path",
    "json-pointer",
    "performance"
  ],
  "author": "Afzal Ahmad",
  "license": "MIT",
  "homepage": "https://github.com/jsonpathx/jsonpathx#readme",
  "bugs": {
    "url": "https://github.com/jsonpathx/jsonpathx/issues"
  }
}
